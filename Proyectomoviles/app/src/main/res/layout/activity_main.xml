<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BeforeLogin.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:text="Encuetra los mejores restaurantes \ncerca de ti"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="23sp"></TextView>

        <ImageView
            android:layout_width="310dp"
            android:layout_height="399dp"

            android:layout_alignParentTop="true"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:background="@drawable/icono_inicio"></ImageView>

        <Button
        android:id="@+id/btn_Registrarse"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="60dp"
        android:background="@color/colorPrimary"
        android:text="Registrarse"
        android:textColor="@color/colorText"
        android:onClick="registrarse"></Button>

        <Button
            android:id="@+id/btn_IniciarSesion"
            android:layout_width="120dp"
            android:layout_height="45dp"

            android:layout_alignParentBottom="true"

            android:layout_marginStart="35dp"
            android:layout_marginBottom="60dp"
            android:layout_toEndOf="@+id/btn_Registrarse"
            android:background="@color/colorPrimary"
            android:onClick="iniciarSesion"
            android:text="Iniciar SesiÃ³n"
            android:textColor="@color/colorText"></Button>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>