<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:text="Registrarse"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="35sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:text="Nombre"
            android:textColor="@color/colorText"
            android:textSize="23sp"></TextView>

        <EditText
            android:id="@+id/editTxt_Register_Nombre"
            android:layout_width="320sp"
            android:layout_height="50sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="150dp"

            android:inputType="textPersonName"
            android:textColor="@color/colorText"
            android:textSize="23sp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="250dp"
            android:gravity="center"
            android:text="Correo"
            android:textColor="@color/colorText"
            android:textSize="23sp"></TextView>

        <EditText
            android:id="@+id/editTxt_Register_Correo"
            android:layout_width="320sp"
            android:layout_height="50sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="280dp"

            android:inputType="textEmailAddress"
            android:textColor="@color/colorText"
            android:textSize="23sp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="380dp"
            android:gravity="center"
            android:text="ContaseÃ±a"
            android:textColor="@color/colorText"
            android:textSize="23sp"></TextView>

        <EditText
            android:id="@+id/editTxt_Register_Contrasena"
            android:layout_width="320sp"
            android:layout_height="50sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="410dp"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:textColor="@color/colorText"
            android:textSize="23sp"></EditText>

        <Button
            android:id="@+id/btn_Registrarse"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="500dp"
            android:background="@color/colorPrimary"
            android:text="Registrarse"
            android:textColor="@color/colorText"
            android:onClick="registrarse"></Button>





    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>