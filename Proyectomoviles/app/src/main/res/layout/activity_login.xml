<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:text="Iniciar Sesión"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="35sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:text="Correo"
            android:textColor="@color/colorText"
            android:textSize="23sp"></TextView>

        <EditText
            android:id="@+id/editTxt_LogIn_Correo"
            android:layout_width="320sp"
            android:layout_height="50sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="150dp"

            android:inputType="textEmailAddress"
            android:textColor="@color/colorText"
            android:textSize="23sp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="250dp"
            android:gravity="center"
            android:text="Contraseña"
            android:textColor="@color/colorText"
            android:textSize="23sp"></TextView>

        <EditText
            android:id="@+id/editTxt_LogIn_Contrasena"
            android:layout_width="320sp"
            android:layout_height="50sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="280dp"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:textColor="@color/colorText"
            android:textSize="23sp"></EditText>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/btn_LogInFacebook"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="500dp">

        </com.facebook.login.widget.LoginButton>

        <Button
            android:id="@+id/btn_IniciarSesion"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="147dp"
            android:layout_marginTop="400dp"
            android:background="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:onClick="iniciarSesion"
            android:text="Iniciar Sesión"
            android:textColor="@color/colorText"></Button>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>